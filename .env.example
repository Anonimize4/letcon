# =============================================================================
# Environment Configuration Example
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit actual .env files with real secrets to version control

# =============================================================================
# Application Environment
# =============================================================================
NODE_ENV=development
FRONTEND_ENV=development

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=cybersecurity_training
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here

# Local PostgreSQL for Lab Contents
LOCAL_DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/cybersecurity_training

# Neon PostgreSQL for User Profiles (get this from your Neon dashboard)
NEON_DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Legacy DATABASE_URL (for backward compatibility)
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/cybersecurity_training

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=5000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# Docker Configuration
# =============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK_NAME=cybersec-training
CONTAINER_PREFIX=cybersec-
MAX_CONTAINERS_PER_USER=5
CONTAINER_TIMEOUT=3600

# =============================================================================
# Email Configuration (optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cybersectraining.com

# =============================================================================
# External Services (optional)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
ENABLE_METRICS=false
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# File Upload
# =============================================================================
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Security
# =============================================================================
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-session-secret-change-in-production
BCRYPT_ROUNDS=12

# =============================================================================
# Lab Configuration
# =============================================================================
LAB_INSTANCE_TIMEOUT=1800
LAB_MAX_CONCURRENT_SESSIONS=100
LAB_CLEANUP_INTERVAL=300000
