generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma-user/client"
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  email         String          @unique
  username      String          @unique
  password      String
  firstName     String?
  lastName      String?
  role          UserRole        @default(USER)
  avatar        String?
  bio           String?
  company       String?
  location      String?
  website       String?
  recorded      Boolean         @default(false)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  lastLoginAt   DateTime?
  api_keys      api_keys[]
  certificates  certificates[]
  enrollments   enrollments[]
  lab_sessions  lab_sessions[]
  refreshTokens RefreshToken[]
  tokens        Token[]
  user_progress user_progress[]

  @@map("users")
}

model RefreshToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  expiresAt DateTime
  revokedAt DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model Token {
  id        String    @id @default(cuid())
  token     String    @unique
  type      TokenType
  userId    String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tokens")
}

model api_keys {
  id         String    @id
  name       String
  key        String    @unique
  scopes     String[]
  userId     String?
  isActive   Boolean   @default(true)
  expiresAt  DateTime?
  lastUsedAt DateTime?
  usageCount Int       @default(0)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime
  users      User?     @relation(fields: [userId], references: [id])
}

model certificates {
  id               String   @id
  userId           String
  labId            String
  certificateUrl   String
  verificationCode String   @unique
  issuedAt         DateTime @default(now())
  labs             labs     @relation(fields: [labId], references: [id])
  users            User     @relation(fields: [userId], references: [id])
}

model enrollments {
  id         String    @id
  userId     String
  labId      String
  enrolledAt DateTime  @default(now())
  expiresAt  DateTime?
  isActive   Boolean   @default(true)
  labs       labs      @relation(fields: [labId], references: [id])
  users      User      @relation(fields: [userId], references: [id])

  @@unique([userId, labId])
}

model lab_categories {
  id          String  @id
  name        String  @unique
  description String?
  icon        String?
  color       String?
  labs        labs[]
}

model lab_sessions {
  id          String        @id
  userId      String
  labId       String
  containerId String?
  status      SessionStatus @default(RUNNING)
  startedAt   DateTime      @default(now())
  endedAt     DateTime?
  completedAt DateTime?
  progress    Float         @default(0)
  hintsUsed   Int           @default(0)
  timeSpent   Int           @default(0)
  ipAddress   String?
  userAgent   String?
  labs        labs          @relation(fields: [labId], references: [id])
  users       User          @relation(fields: [userId], references: [id])
}

model labs {
  id             String          @id
  title          String
  description    String
  difficulty     Difficulty      @default(BEGINNER)
  dockerImage    String
  port           Int?
  environment    Json?
  instructions   String?
  hints          String[]
  flag           String?
  estimatedTime  Int?
  tags           String[]
  categoryId     String
  objectives     String[]
  prerequisites  String[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime
  isActive       Boolean         @default(true)
  certificates   certificates[]
  enrollments    enrollments[]
  lab_sessions   lab_sessions[]
  lab_categories lab_categories  @relation(fields: [categoryId], references: [id])
  user_progress  user_progress[]
}

model system_logs {
  id        String   @id
  level     LogLevel
  message   String
  metadata  Json?
  userId    String?
  action    String?
  resource  String?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
}

model user_progress {
  id             String         @id
  userId         String
  labId          String
  status         ProgressStatus @default(NOT_STARTED)
  score          Float          @default(0)
  attempts       Int            @default(0)
  bestTime       Int?
  totalTime      Int            @default(0)
  firstAttemptAt DateTime?
  lastAttemptAt  DateTime?
  completedAt    DateTime?
  labs           labs           @relation(fields: [labId], references: [id])
  users          User           @relation(fields: [userId], references: [id])

  @@unique([userId, labId])
}

enum UserRole {
  USER
  ADMIN
  LABCREATOR
}

enum TokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  ACCOUNT_ACTIVATION
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
  FATAL
}

enum ProgressStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum SessionStatus {
  RUNNING
  COMPLETED
  FAILED
  TIMEOUT
  TERMINATED
}
