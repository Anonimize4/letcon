# ============================================================================
# Backend Environment Configuration
# ============================================================================

# Environment
NODE_ENV=development
PORT=5000

# ============================================================================
# Database Configuration (Neon PostgreSQL)
# ============================================================================
NEON_DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require
NEON_DIRECT_DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require

# Local PostgreSQL (for development)
LOCAL_DATABASE_URL=postgresql://postgres:password@localhost:5432/lethcon_local

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# ============================================================================
# CORS Configuration
# ============================================================================
# For local development
CORS_ORIGIN=http://localhost:3000

# For production - uncomment and set your Vercel frontend URL
# CORS_ORIGIN=https://lethcon-frontend.vercel.app

# ============================================================================
# Security Configuration
# ============================================================================
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-in-production

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Docker Configuration
# ============================================================================
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK_NAME=lethcon-network
CONTAINER_PREFIX=lethcon-
MAX_CONTAINERS_PER_USER=5
CONTAINER_TIMEOUT=3600

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@lethcon.com

# ============================================================================
# File Upload Configuration
# ============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.txt,.md,.jpg,.png,.gif

# ============================================================================
# Lab Configuration
# ============================================================================
LAB_INSTANCE_TIMEOUT=1800
LAB_MAX_CONCURRENT_SESSIONS=100
LAB_CLEANUP_INTERVAL=300000

# ============================================================================
# Monitoring Configuration
# ============================================================================
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090

# ============================================================================
# API Configuration
# ============================================================================
API_VERSION=v1
